<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CustomerDetailsScreenActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/appLayout"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCustomerDetails"
        android:layout_below="@+id/appLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:background="@color/white"
        app:cardElevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_customer"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNameCustomerDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_bold"
                    app:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivCheckCustomer"
                    android:visibility="gone"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_check_circle"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_call"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMobileNumberCustomerDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    app:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAmountCustomerDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/poppins_bold"
                    app:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/Color008000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAddressCustomerDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    app:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_account_number"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAccountNumberDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    app:fontFamily="@font/poppins_regular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_rupee"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAccountDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text=""
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    app:fontFamily="@font/poppins_medium"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/cvCustomerDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvCustomerDetail"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabViewClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_15sdp"
        android:src="@drawable/ic_plus"
        app:icon="@drawable/ic_plus"
        android:text="@string/collect"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/black"/>

</RelativeLayout>