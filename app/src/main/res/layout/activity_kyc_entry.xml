<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.KycEntryActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/appLayout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutAppearance"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/aadhar_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAddharNumberKycEntry"
                    style="@style/Edittext"
                    android:hint="@string/enter_aadhar_number"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/llUploadAadharCardFront"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/bg_edit_rectengle"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUploadAadharCardFront"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/upload_aadhar_card_front"
                        android:fontFamily="@font/poppins_regular"
                        app:fontFamily="@font/poppins_regular"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:visibility="gone"
                        android:id="@+id/ivUploadAadharCardFront"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_user_image"
                        app:shapeAppearance="@style/CornerCut"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/llUploadAadharCardBack"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/bg_edit_rectengle"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUploadAadharCardBack"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/upload_aadhar_card_back"
                        android:fontFamily="@font/poppins_regular"
                        app:fontFamily="@font/poppins_regular"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:visibility="gone"
                        android:id="@+id/ivUploadAadharCardBack"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_user_image"
                        app:shapeAppearance="@style/CornerCut"/>
                </RelativeLayout>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutAppearance"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/pan_card">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPanCardKycEntry"
                    style="@style/Edittext"
                    android:hint="@string/enter_pan_card"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:id="@+id/llUploadPanCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_edit_rectengle"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPanCardUpload"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/upload_pan_card"
                    android:fontFamily="@font/poppins_regular"
                    app:fontFamily="@font/poppins_regular"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:visibility="gone"
                    android:id="@+id/ivPanCardImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_user_image"
                    app:shapeAppearance="@style/CornerCut"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/llUploadCustomerImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_edit_rectengle"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvUploadCustomerImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/upload_customer_picture"
                    android:fontFamily="@font/poppins_regular"
                    app:fontFamily="@font/poppins_regular"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:visibility="gone"
                    android:id="@+id/ivCustomerImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_user_image"
                    app:shapeAppearance="@style/CornerCut"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/llUploadSignature"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_edit_rectengle"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvUploadSignature"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/upload_signature"
                    android:fontFamily="@font/poppins_regular"
                    app:fontFamily="@font/poppins_regular"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:visibility="gone"
                    android:id="@+id/ivSignatureImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_user_image"
                    app:shapeAppearance="@style/CornerCut"/>
            </RelativeLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUploadKycEntry"
                style="@style/MaterialButton"
                android:layout_margin="@dimen/_10sdp"
                android:text="@string/upload" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>