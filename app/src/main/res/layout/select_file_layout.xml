<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Color1A1C1E"
            android:fontFamily="@font/poppins_regular"
            app:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/image_selection" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Color1A1C1E"
            android:fontFamily="@font/poppins_regular"
            app:fontFamily="@font/poppins_regular"
            android:text="@string/from_where_you_want_to_pick_this_image"
            android:textSize="@dimen/_11ssp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:alpha="0.3"
            android:background="@color/Color_E3E3E3" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCameraSelectFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            app:fontFamily="@font/poppins_regular"
            android:textColor="@color/Color1A1C1E"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/cameraTitle"
            android:textSize="@dimen/_14ssp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:alpha="0.3"
            android:background="@color/Color_E3E3E3" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvGallerySelectFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/Color1A1C1E"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"
            app:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/galleryTitle"
            android:textSize="@dimen/_14ssp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:alpha="0.3"
            android:background="@color/Color_E3E3E3" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCancelSelectFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            app:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_10sdp"
            android:text="@string/cancel"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/errorColor"
            android:textSize="@dimen/_14ssp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>