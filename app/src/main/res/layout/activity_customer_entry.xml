<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CustomerEntryActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/appLayout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_user_image"/>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutAppearance"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/first_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFirstNameCustomerEntry"
                    style="@style/Edittext"
                    android:hint="@string/enter_first_name"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutAppearance"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/last_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLastNameCustomerEntry"
                    style="@style/Edittext"
                    android:hint="@string/enter_last_name"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutAppearance"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/mobile_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMobileNumberDdsEntry"
                    style="@style/Edittext"
                    android:maxLength="10"
                    android:hint="@string/enter_mobile_number"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutAppearance"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/dob">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDobCustomerEntry"
                    style="@style/Edittext"
                    android:focusable="false"
                    android:clickable="false"
                    android:hint="@string/enter_dob"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutAppearance"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/gender">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etGenderCustomerEntry"
                    style="@style/Edittext"
                    android:hint="@string/enter_gender"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutAppearance"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/father_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFatherNameCustomerEntry"
                    style="@style/Edittext"
                    android:hint="@string/enter_father_name"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutAppearance"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/mother_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMotherNameCustomerEntry"
                    style="@style/Edittext"
                    android:hint="@string/enter_mother_name"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutAppearance"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/annual_income">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAnnualIncomeEntry"
                    style="@style/Edittext"
                    android:hint="@string/enter_annual_income"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutAppearance"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/occupation">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etOccupationCustomerEntry"
                    style="@style/Edittext"
                    android:hint="@string/enter_occupation"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutAppearance"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/caste">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCasteCustomerEntry"
                    style="@style/Edittext"
                    android:hint="@string/enter_caste"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitDdsEntry"
                style="@style/MaterialButton"
                android:layout_margin="@dimen/_10sdp"
                android:text="@string/submit" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>