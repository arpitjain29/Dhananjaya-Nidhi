<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.LoanDetailsActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/appLayout"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLoanDetails"
        android:layout_below="@+id/appLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp"
        android:background="@color/white"
        android:layout_margin="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/llLoanCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_customer"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNameLoanDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_bold"
                    app:fontFamily="@font/poppins_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivCheckCustomerLoanDetails"
                    android:visibility="gone"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_check_circle"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAccountNoLoanDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/poppins_semibold"
                app:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEmiLoanDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/poppins_semibold"
                app:fontFamily="@font/poppins_semibold"
                android:textColor="@color/Color008000"
                android:textSize="@dimen/_14ssp"/>
<!--            <androidx.appcompat.widget.AppCompatTextView-->
<!--                android:id="@+id/tvDueDateLoanDetails"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text=""-->
<!--                android:fontFamily="@font/poppins_medium"-->
<!--                app:fontFamily="@font/poppins_medium"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="@dimen/_14ssp"/>-->
<!--            <androidx.appcompat.widget.AppCompatTextView-->
<!--                android:id="@+id/tvPaidAmountLoanDetails"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text=""-->
<!--                android:fontFamily="@font/poppins_regular"-->
<!--                app:fontFamily="@font/poppins_regular"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="@dimen/_14ssp"/>-->
<!--            <androidx.appcompat.widget.AppCompatTextView-->
<!--                android:id="@+id/tvPendingOutstandingAmountLoanDetails"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text=""-->
<!--                android:fontFamily="@font/poppins_regular"-->
<!--                app:fontFamily="@font/poppins_regular"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="@dimen/_14ssp"/>-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/cvLoanDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvLoanDetails"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabViewClickLoanDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_15sdp"
        android:src="@drawable/ic_plus"
        app:icon="@drawable/ic_plus"
        android:text="@string/collect"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/black"/>
</RelativeLayout>