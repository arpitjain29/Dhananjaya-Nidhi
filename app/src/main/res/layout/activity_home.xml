<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity"
    tools:openDrawer="end">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayoutHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:paddingBottom="@dimen/_24sdp">

                <!-- User Profile Section -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clUserProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                     android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                     app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- Drawer Menu Icon -->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivDrawerMenu"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:contentDescription="@string/nav_open"
                         android:src="@drawable/ic_menu"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:tint="@color/text_primary" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivUserProfile"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:contentDescription="@string/customer"
                       android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/circleImageView"
                        app:layout_constraintStart_toEndOf="@id/ivDrawerMenu"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="@dimen/_12sdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUserName"
                        style="@style/TextAppearanceTitleLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivUserProfile"
                        app:layout_constraintTop_toTopOf="@id/ivUserProfile"
                        app:layout_constraintBottom_toBottomOf="@id/ivUserProfile" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Search Section -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clUserProfile">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCustomerAccount"
                        style="@style/TextInputLayoutAppearance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/customer_account"
                        app:layout_constraintEnd_toStartOf="@id/ivSearchList"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCustomerAccount"
                            style="@style/Edittext"
                            android:hint="@string/enter_customer_account"
                            android:inputType="number"
                            android:importantForAutofill="yes" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivSearchList"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:contentDescription="@string/search"
                         android:src="@drawable/ic_search"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:tint="@color/primary" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Banner Image -->
<!--                <androidx.appcompat.widget.AppCompatImageView-->
<!--                    android:id="@+id/ivBanner"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="@dimen/_120sdp"-->
<!--                    android:layout_marginTop="@dimen/_16sdp"-->
<!--                    android:layout_marginStart="@dimen/_12sdp"-->
<!--                    android:layout_marginEnd="@dimen/_12sdp"-->
<!--                    android:adjustViewBounds="true"-->
<!--                    android:contentDescription="@string/app_name"-->
<!--                    android:scaleType="fitCenter"-->
<!--                    android:src="@drawable/ic_app_image"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toBottomOf="@id/clSearch" />-->

                <!-- Pending Amount -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPendingAmount"
                    style="@style/TextAppearanceLabelMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:gravity="center"
                    android:padding="@dimen/_12sdp"
                    android:textColor="@color/error"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clSearch" />

                <!-- Stats Cards Row 1 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clStatsRow1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvPendingAmount">

                    <!-- Today Target Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvTodayTarget"
                        style="@style/CardStyleClickable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:minHeight="96dp"
                        app:layout_constraintEnd_toStartOf="@id/cvTodayCollection"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.48">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/llTodayTarget"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_16sdp"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTodayTargetLabel"
                                style="@style/TextAppearanceLabelMedium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lines="2"
                                android:text="@string/today_target"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTotalTarget"
                                style="@style/TextAppearanceTitleLarge"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:gravity="center"
                                android:textColor="@color/success"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tvTodayTargetLabel" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Today Collection Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvTodayCollection"
                        style="@style/CardStyleClickable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:minHeight="96dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/cvTodayTarget"
                        app:layout_constraintTop_toTopOf="@id/cvTodayTarget"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.48">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/llTodayCollection"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_16sdp"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTodayCollectionLabel"
                                style="@style/TextAppearanceLabelMedium"
                                android:layout_width="0dp"
                                android:lines="2"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/today_collection"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTotalCollection"
                                style="@style/TextAppearanceTitleLarge"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:gravity="center"
                                android:textColor="@color/success"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tvTodayCollectionLabel" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Stats Cards Row 2 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clStatsRow2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clStatsRow1">

                    <!-- Customer Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvCustomer"
                        style="@style/CardStyleClickable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:minHeight="96dp"
                        app:layout_constraintEnd_toStartOf="@id/cvLoan"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.48">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/llCustomer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_16sdp"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvCustomerLabel"
                                style="@style/TextAppearanceLabelMedium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:lines="2"
                                android:gravity="center"
                                android:text="@string/customer_"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvCustomerDdsCounts"
                                style="@style/TextAppearanceTitleMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:gravity="center"
                                android:textColor="@color/success"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tvCustomerLabel" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Loan Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvLoan"
                        style="@style/CardStyleClickable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:minHeight="96dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/cvCustomer"
                        app:layout_constraintTop_toTopOf="@id/cvCustomer"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.48">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/llLoan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_16sdp"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvLoanLabel"
                                style="@style/TextAppearanceLabelMedium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/loan"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:lines="2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvLoanAccountCount"
                                style="@style/TextAppearanceTitleMedium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:gravity="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tvLoanLabel" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Stats Cards Row 3 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clStatsRow3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clStatsRow2">

                    <!-- Loan Enquiry Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvLoanEnquiry"
                        style="@style/CardStyleClickable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:minHeight="96dp"
                        app:layout_constraintEnd_toStartOf="@id/cvComplaint"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.48">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/llLoanEnquiry"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_16sdp"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextAppearanceLabelMedium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/loan_enquiry"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:lines="2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Complaint Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvComplaint"
                        style="@style/CardStyleClickable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:minHeight="96dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/cvLoanEnquiry"
                        app:layout_constraintTop_toTopOf="@id/cvLoanEnquiry"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.48">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/llComplaint"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_16sdp"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextAppearanceLabelMedium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/complaint"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:lines="2"
                                app:layout_constraintBottom_toBottomOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        android:elevation="16dp"
        app:headerLayout="@layout/header_layout"
        app:itemIconSize="@dimen/_24sdp"
        app:itemIconTint="@color/nav_icon_tint"
        app:itemIconPadding="@dimen/_12sdp"
        app:itemTextAppearance="@style/NavDrawerTextStyle"
        app:itemTextColor="@color/nav_text_color"
        app:itemRippleColor="@color/surface_variant"
        app:itemVerticalPadding="@dimen/_16sdp"
        app:itemHorizontalPadding="@dimen/_16sdp"
        app:itemMaxLines="1"
        app:divider="@color/divider"
        app:dividerInsetStart="@dimen/_16sdp"
        app:dividerInsetEnd="0dp"
        app:menu="@menu/side_menu" />

</androidx.drawerlayout.widget.DrawerLayout>